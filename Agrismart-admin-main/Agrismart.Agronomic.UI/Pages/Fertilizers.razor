@page "/fertilizers"

@using Agrismart.Agronomic.UI.Services.Models;
@using Agrismart.Agronomic.UI.Pages.Components
@using Agrismart.Agronomic.UI.Pages.InputValidators
@using Agrismart.Agronomic.UI.Services.Interfaces
@using Agrismart.Agronomic.UI.Services.Requests
@using Agrismart.Agronomic.UI.Services.Requests.Commands
@using Agrismart.Agronomic.UI.Services.Requests.Queries
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.QuickGrid
@using System.ComponentModel.DataAnnotations
@attribute [Authorize]

@inject IFertilizerService _fertilizerService
@inject ICatalogService _catalogService

<PageTitle>Fertilizantes</PageTitle>

<h2>Lista de Fertilizantes</h2>
<hr />

<AlertMessage Title="Mensaje de sistema" @ref="@alertCreateMessage">
    <div class="alert alert-success">
        <p>Fertilizante creado con éxito</p>
    </div>
</AlertMessage>

<AlertMessage Title="Mensaje de sistema" @ref="@alertUpdateMessage">
    <div class="alert alert-success">
        <p>Fertilizante actualizado con éxito</p>
    </div>
</AlertMessage>

<AlertMessage Title="Error de sistema" @ref="@alertErrorMessage">
    <div class="alert alert-danger">
        <p><label>Hubo un error en la aplicación. Informe al administrador</label></p>
    </div>
</AlertMessage>


@if (!createNew)
{
    <div class="container-fluid">
        <div class="row align-items-end">
            <div class="col-2">
                <label>Catálogo:</label>
                <InputSelect id="catalogsList" @bind-Value="@selectedCatalogId" style="width: 100%" class="form-select form-select-sm">
                    <option value="0">Todos</option>
                    @foreach (var catalog in catalogs)
                    {
                        <option value="@catalog.Id">@catalog.Name</option>
                    }
                </InputSelect>
            </div>
            <div class="col-2">
                <label class="form-check-label">Solo Activos</label>
                <input type="checkbox" id="onlyActivesCheck" checked @bind-value="@onlyActives" class="form-check-input" />
            </div>
            <div class="col-2">
                <button class="btn btn-primary" @onclick="GetFertilizersClick">Consultar</button>
            </div>
            <div class="col-2">
                <button class="btn btn-secondary" @onclick="NewFertilizerClick">Nuevo</button>
            </div>
            <div class="col-2" />

        </div>
    </div>
}
else
{
    <EditForm EditContext="editContext">
        <DataAnnotationsValidator />
        <div class="container-fluid">
            <div class="row align-items-end">
                <div class="col-1">
                    <label>Catálogo:</label>
                    <InputSelect @bind-Value="@newFertilizer.CatalogId" style="width: 100%" class="form-select form-select-sm">
                        <option value="0">Seleccione una opción</option>
                        @foreach (var catalog in catalogs)
                        {
                            <option value="@catalog.Id">@catalog.Name</option>
                        }
                    </InputSelect>
                </div>
                <div class="col-1">
                    <label>Nombre:</label>
                    <InputText @bind-Value="@newFertilizer.Name" style="width: 100%" class="form-control form-control-sm" />
                </div>
                <div class="col-1">
                    <label>Fabricante:</label>
                    <InputText @bind-Value="@newFertilizer.Manufacturer" style="width: 100%" class="form-control form-control-sm" />
                </div>
                <div class="col-1">
                    <label>Es Líquido:</label>
                    <InputCheckbox @bind-Value="@newFertilizer.IsLiquid" style="width: 100%" />
                </div>
                <div class="col-2">
                    <button class="btn btn-primary" @onclick="AddFertilizerClick">Agregar</button>
                    <button class="btn btn-danger" @onclick="CancelAddFertilizerClick">Cancelar</button>
                </div>
            </div>
            @if (!valid)
            {
                <div class="row p-3">
                    <div class="alert alert-warning col-8" role="alert">
                        Debe seleccionar o digitar algun valor para los atributos marcados en rojo
                    </div>
                </div>
            }
        </div>
    </EditForm>
}
<hr />

@if (fertilizers == null)
{
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Cargando...</span>
    </div>
}
else
{
    <QuickGrid Items="@fertilizers" Pagination="@pagination">
        <TemplateColumn Title="Id" Class="tinyColumn">
            <label>@context.Id</label>
        </TemplateColumn>
        <TemplateColumn Title="Catalogo" Class="normalColumn">
            @if (context.Id == editableId)
            {
                <InputSelect id="catalogList" @bind-Value="@context.CatalogId" style="width: 100%">

                    @foreach (var catalog in catalogs)
                    {
                        <option value="@catalog.Id">@catalog.Name</option>
                    }
                </InputSelect>
            }
            else
            {
                <label>@context.Catalog</label>
            }
        </TemplateColumn>
        <TemplateColumn Title="Nombre" Class="normalColumn" Sortable="true">
            @if (context.Id == editableId)
            {
                <input @bind="@context.Name" />
            }
            else
            {
                <label>@context.Name</label>
            }
        </TemplateColumn>
        <TemplateColumn Class="normalColumn" Title="Fabricante">
            @if (context.Id == editableId)
            {
                <input @bind="@context.Manufacturer" />
            }
            else
            {
                <label>@context.Manufacturer</label>
            }
        </TemplateColumn>
        <TemplateColumn Class="normalColumn" Title="Es Líquido">
            @if (context.Id == editableId)
            {
                <input type="checkbox" @bind="@context.IsLiquid" />
            }
            else
            {
                @if (context.IsLiquid)
                {
                    <i class="bi bi-toggle-on" />
                }
                else
                {
                    <i class="bi bi-toggle-off" />
                }
            }
        </TemplateColumn>
        <TemplateColumn Title="Activo" Class="normalColumn">
            @if (context.Id == editableId)
            {
                <input type="checkbox" @bind="@context.Active" />
            }
            else
            {
                @if (context.Active)
                {
                    <i class="bi bi-toggle-on" />
                }
                else
                {
                    <i class="bi bi-toggle-off" />
                }
            }
        </TemplateColumn>
        <TemplateColumn Title="Acciones" Class="normalColumn">
            @if (context.Id == editableId)
            {
                <button @onclick="@(() => SaveClick(@context))"><i class="bi bi-floppy-fill"></i></button>
                <button @onclick="@(() => CancelEditClick())"><i class="bi bi-x-circle-fill"></i></button>
            }
            else
            {
                <button @onclick="@(() => EditClick(@context.Id))"><i class="bi bi-pencil-square"></i></button>
            }
        </TemplateColumn>
    </QuickGrid>

    <Paginator State="@pagination" />
}

@code {

    #region Main

    public class FertilizerModel
    {
        public int Id { get; set; }
        [Range(1, int.MaxValue, ErrorMessage = "Debe seleccionar una opción")]
        public int CatalogId { get; set; }
        public string? Catalog { get; set; }
        public string? Name { get; set; }
        public string? Manufacturer { get; set; }
        public bool IsLiquid { get; set; }
        public bool Active { get; set; }
    }

    private AlertMessage? alertErrorMessage { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            editContext = new EditContext(newFertilizer);

            var getAllCatalogsResult = await _catalogService.GetAll(new GetAllCatalogsRequest() { IncludeInactives = false });
            catalogs = getAllCatalogsResult.Catalogs.ToList();

            await GetFertilizersClick();
        }
        catch (Exception ex)
        {
        }
    }

    #endregion

    #region Search of Containers

    private IQueryable<FertilizerModel>? fertilizers;
    public int selectedCatalogId = 0;
    public bool onlyActives = true;
    public List<Catalog> catalogs = new List<Catalog>();
    PaginationState pagination = new PaginationState() { ItemsPerPage = 20 };

    public async Task GetFertilizersClick()
    {
        fertilizers = null;
        List<FertilizerModel> fertilizersList = new List<FertilizerModel>();
        try
        {

            var getAllFertilizersResult = await _fertilizerService.GetAll(new GetAllFertilizersRequest() { CatalogId = selectedCatalogId, IncludeInactives = !onlyActives });

            if (getAllFertilizersResult.Fertilizers != null)
            {
                getAllFertilizersResult.Fertilizers.ToList().ForEach(f => fertilizersList.Add(new FertilizerModel()
                    {
                        Id = f.Id,
                        CatalogId = f.CatalogId,
                        Catalog = catalogs.Where(cat => cat.Id == f.CatalogId).FirstOrDefault().Name,
                        Name = f.Name,
                        Manufacturer = f.Manufacturer,
                        IsLiquid = f.IsLiquid,
                        Active = f.Active
                    }));

                fertilizers = fertilizersList.AsQueryable();
            }
        }
        catch (Exception ex)
        {
            alertErrorMessage.Open();
            fertilizers = fertilizersList.AsQueryable();
        }
    }

    #endregion

    #region New Fertilizer

    public EditContext? editContext;
    public FertilizerModel newFertilizer = new FertilizerModel();
    public bool createNew = false;
    public int newCatalogId = 0;
    bool valid = true;
    private AlertMessage alertCreateMessage { get; set; }

    public async Task NewFertilizerClick()
    {
        createNew = true;
        valid = true;
        ClearNewModel();
    }

    public async Task CancelAddFertilizerClick()
    {
        createNew = false;
        valid = true;
    }

    public async Task AddFertilizerClick()
    {
        try
        {
            valid = editContext.Validate();
            if (valid)
            {
                var createFertilizerResult = await _fertilizerService.Create(new CreateFertilizerRequest()
                    {
                        CatalogId = newFertilizer.CatalogId,
                        Name = newFertilizer.Name,
                        Manufacturer = newFertilizer.Manufacturer,
                        IsLiquid = newFertilizer.IsLiquid
                    });
                if (createFertilizerResult != null)
                {
                    alertCreateMessage.Open();
                    await GetFertilizersClick();
                }
                else
                {
                    alertErrorMessage.Open();
                }
                CancelAddFertilizerClick();
            }
        }
        catch (Exception ex)
        {
        }
    }

    private void ClearNewModel()
    {
        newFertilizer.CatalogId = 0;
        newFertilizer.Name = string.Empty;
        newFertilizer.Manufacturer = string.Empty;
        newFertilizer.IsLiquid = false;
    }

    #endregion

    #region Edit Fertilizer

    public int editableId = 0;
    private AlertMessage alertUpdateMessage { get; set; }

    void EditClick(int id) => editableId = id;

    void CancelEditClick() => editableId = 0;

    private async Task SaveClick(FertilizerModel fertilizerToSave)
    {
        try
        {
            fertilizers = null;
            var updateFertilizerResult = await _fertilizerService.Update(new UpdateFertilizerRequest()
                {
                    Id = fertilizerToSave.Id,
                    CatalogId = fertilizerToSave.CatalogId,
                    Name = fertilizerToSave.Name,
                    Manufacturer = fertilizerToSave.Manufacturer,
                    IsLiquid = fertilizerToSave.IsLiquid,
                    Active = fertilizerToSave.Active
                });
            if (updateFertilizerResult != null)
            {
                alertUpdateMessage.Open();
                await GetFertilizersClick();
            }
            else
            {
                alertErrorMessage.Open();
            }
            editableId = 0;
        }
        catch (Exception ex)
        {
        }
    }

    #endregion
}
