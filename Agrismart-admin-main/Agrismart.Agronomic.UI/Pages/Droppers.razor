@page "/Droppers"

@using Agrismart.Agronomic.UI.Services.Models
@using Agrismart.Agronomic.UI.Pages.Components
@using Agrismart.Agronomic.UI.Services.Interfaces
@using Agrismart.Agronomic.UI.Services.Requests
@using Agrismart.Agronomic.UI.Services.Requests.Commands
@using Agrismart.Agronomic.UI.Services.Requests.Queries
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.QuickGrid
@using System.ComponentModel.DataAnnotations
@attribute [Authorize]

@inject ICatalogService _catalogService
@inject IDropperService _dropperService

<PageTitle>Goteros</PageTitle>

<h2>Lista de Goteros</h2>
<hr />

<AlertMessage Title="Mensaje de sistema" @ref="@alertCreateMessage">
    <div class="alert alert-success">
        <p>Sección de Riego de Cultivo creada con éxito</p>
    </div>
</AlertMessage>

<AlertMessage Title="Mensaje de sistema" @ref="@alertUpdateMessage">
    <div class="alert alert-success">
        <p>Sección de Riego de Cultivo actualizada con éxito</p>
    </div>
</AlertMessage>

<AlertMessage Title="Error de sistema" @ref="@alertErrorMessage">
    <div class="alert alert-danger">
        <p><label>Hubo un error en la aplicación. Informe al administrador</label></p>
    </div>
</AlertMessage>


@if (!createNew)
{
    <div class="container-fluid">
        <div class="row align-items-end">
            <div class="col-2">
                <label>Catálogo:</label>
                <InputSelect id="catalogsList" @bind-Value="@selectedCatalogId" style="width: 100%" class="form-select form-select-sm">
                    <option value="0">Todos</option>
                    @foreach (var catalog in catalogs)
                    {
                        <option value="@catalog.Id">@catalog.Name</option>
                    }
                </InputSelect>
            </div>
            <div class="col-2">
                <label class="form-check-label">Solo Activos</label>
                <input type="checkbox" id="onlyActivesCheck" checked @bind-value="@onlyActives" class="form-check-input" />
            </div>
            <div class="col-1">
                <button class="btn btn-primary" @onclick="GetDroppersClick">Consultar</button>
            </div>
            <div class="col-1">
                <button class="btn btn-secondary" @onclick="NewDropperClick">Nuevo</button>
            </div>
            <div class="col-2" />

        </div>
    </div>
}
else
{
    <EditForm EditContext="editContext">
        <DataAnnotationsValidator />
        <div class="container-fluid">
            <div class="row align-items-end">
                <div class="col-1">
                    <label>Catálogo:</label>
                    <InputSelect @bind-Value="@newDropper.CatalogId" style="width: 100%" class="form-select form-select-sm">
                        <option value="0">Seleccione una opción</option>
                        @foreach (var catalog in catalogs)
                        {
                            <option value="@catalog.Id">@catalog.Name</option>
                        }
                    </InputSelect>
                </div>
                <div class="col-2">
                    <label>Nombre:</label>
                    <InputText @bind-Value="@newDropper.Name" style="width: 100%" type="text" class="form-control form-control-sm" />
                </div>
                <div class="col-1">
                    <label>Tasa de flujo:</label>
                    <InputNumber @bind-Value="@newDropper.FlowRate" style="width: 100%" type="text" class="form-control form-control-sm" />
                </div>
                <div class="col-2">
                    <button class="btn btn-primary" @onclick="AddDropperClick">Agregar</button>
                    <button class="btn btn-danger" @onclick="CancelAddDropperClick">Cancelar</button>
                </div>
            </div>
            @if (!valid)
            {
                <div class="row p-3">
                    <div class="alert alert-warning col-8" role="alert">
                        Debe seleccionar o digitar algun valor para los atributos marcados en rojo
                    </div>
                </div>
            }
        </div>
    </EditForm>
}
<hr />

@if (droppers == null)
{
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Cargando...</span>
    </div>
}
else
{
    <QuickGrid Items="@droppers" Pagination="@pagination">
        <TemplateColumn Title="Id" Class="tinyColumn">
            <label>@context.Id</label>
        </TemplateColumn>
        <TemplateColumn Title="Catalogo" Class="normalColumn">
            @if (context.Id == editableId)
            {
                <InputSelect id="catalogList" @bind-Value="@context.CatalogId" style="width: 100%">

                    @foreach (var catalog in catalogs)
                    {
                        <option value="@catalog.Id">@catalog.Name</option>
                    }
                </InputSelect>
            }
            else
            {
                <label>@context.Catalog</label>
            }
        </TemplateColumn>
        <TemplateColumn Title="Nombre" Class="bigColumn">
            @if (context.Id == editableId)
            {
                <input @bind="@context.Name" style="width: 100%" />
            }
            else
            {
                <label>@context.Name</label>
            }
        </TemplateColumn>
        <TemplateColumn Title="Tasa de Flujo" Class="bigColumn">
            @if (context.Id == editableId)
            {
                <input @bind="@context.FlowRate" style="width: 100%" />
            }
            else
            {
                <label>@context.FlowRate</label>
            }
        </TemplateColumn>
        <TemplateColumn Title="Activo" Class="normalColumn">
            @if (context.Id == editableId)
            {
                <input type="checkbox" @bind="@context.Active" />
            }
            else
            {
                @if (context.Active)
                {
                    <i class="bi bi-toggle-on" />
                }
                else
                {
                    <i class="bi bi-toggle-off" />

                }
            }
        </TemplateColumn>
        <TemplateColumn Title="Acciones" Class="normalColumn">
            @if (context.Id == editableId)
            {
                <button @onclick="@(() => SaveClick(@context))"><i class="bi bi-floppy-fill"></i></button>
                <button @onclick="@(() => CancelEditClick())"><i class="bi bi-x-circle-fill"></i></button>
            }
            else
            {
                <button @onclick="@(() => EditClick(@context.Id))"><i class="bi bi-pencil-square"></i></button>
            }
        </TemplateColumn>
    </QuickGrid>

    <Paginator State="@pagination" />
}

@code {

    #region Main

    public class DropperModel
    {
        public int Id { get; set; }
        [Range(1, int.MaxValue, ErrorMessage = "Debe seleccionar una opción")]
        public int CatalogId { get; set; }
        public string? Catalog { get; set; }
        [Required]
        public string? Name { get; set; }
        public double? FlowRate { get; set; }
        public bool Active { get; set; }
    }

    private AlertMessage? alertErrorMessage { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            editContext = new EditContext(newDropper);

            var getAllCatalogsResult = await _catalogService.GetAll(new GetAllCatalogsRequest() { IncludeInactives = false });
            catalogs = getAllCatalogsResult.Catalogs.ToList();

            await GetDroppersClick();
        }
        catch (Exception ex)
        {
        }
    }

    #endregion

    #region Search of Droppers

    private IQueryable<DropperModel>? droppers;
    public int selectedCatalogId = 0;
    public bool onlyActives = true;
    public List<Catalog> catalogs = new List<Catalog>();
    PaginationState pagination = new PaginationState() { ItemsPerPage = 20 };

    public async Task GetDroppersClick()
    {
        droppers = null;
        List<DropperModel> droppersList = new List<DropperModel>();
        try
        {
            var getAllDroppersResult = await _dropperService.GetAll(new GetAllDroppersRequest() {  IncludeInactives = !onlyActives });

            getAllDroppersResult.Droppers.ToList().ForEach(record => droppersList.Add(new DropperModel()
                {
                    Id = record.Id,
                    CatalogId = record.CatalogId,
                    Catalog = catalogs.Where(cat => cat.Id == record.CatalogId).FirstOrDefault().Name,
                    Name = record.Name, 
                    FlowRate = record.FlowRate,
                    Active = record.Active
                }));

            droppers = droppersList.AsQueryable();
        }
        catch (Exception ex)
        {
            alertErrorMessage.Open();
            droppers = droppersList.AsQueryable();
        }
    }

    #endregion

    #region New Dropper

    public EditContext? editContext;
    public DropperModel newDropper = new DropperModel();

    public bool createNew = false;
    bool valid = true;
    private AlertMessage alertCreateMessage { get; set; }

    public async Task NewDropperClick()
    {
        createNew = true;
        valid = true;
        ClearNewModel();
    }

    public async Task CancelAddDropperClick()
    {
        createNew = false;
        valid = true;
    }

    public async Task AddDropperClick()
    {
        try
        {
            valid = editContext.Validate();
            if (valid)
            {
                var createDropperResult = await _dropperService.Create(new CreateDropperRequest()
                    {
                        CatalogId = newDropper.CatalogId,
                        Name = newDropper.Name,
                        FlowRate = newDropper.FlowRate
                    });
                if (createDropperResult != null)
                {
                    alertCreateMessage.Open();
                    await GetDroppersClick();
                }
                else
                {
                    alertErrorMessage.Open();
                }
                CancelAddDropperClick();
            }
        }
        catch (Exception ex)
        {
        }
    }

    private void ClearNewModel()
    {
        newDropper.CatalogId = 0;
        newDropper.Name = string.Empty;
        newDropper.FlowRate = 0;
    }

    #endregion

    #region Edit Dropper

    public int editableId = 0;
    private AlertMessage alertUpdateMessage { get; set; }

    void EditClick(int id) => editableId = id;

    void CancelEditClick() => editableId = 0;

    private async Task SaveClick(DropperModel dropperToSave)
    {
        try
        {
            droppers = null;
            var updateDropperResult = await _dropperService.Update(new UpdateDropperRequest()
                {
                    Id = dropperToSave.Id,
                    CatalogId = dropperToSave.CatalogId,
                    Name = dropperToSave.Name,    
                    FlowRate = dropperToSave.FlowRate,
                    Active = dropperToSave.Active
                });
            if (updateDropperResult != null)
            {
                alertUpdateMessage.Open();
                await GetDroppersClick();
            }
            else
            {
                alertErrorMessage.Open();
            }
            editableId = 0;
        }
        catch (Exception ex)
        {
        }
    }

    #endregion

}