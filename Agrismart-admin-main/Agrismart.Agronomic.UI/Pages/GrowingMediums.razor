@page "/GrowingMediums"

@using Agrismart.Agronomic.UI.Services.Models
@using Agrismart.Agronomic.UI.Pages.Components
@using Agrismart.Agronomic.UI.Services.Interfaces
@using Agrismart.Agronomic.UI.Services.Requests
@using Agrismart.Agronomic.UI.Services.Requests.Commands
@using Agrismart.Agronomic.UI.Services.Requests.Queries
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.QuickGrid
@using System.ComponentModel.DataAnnotations

@attribute [Authorize]

@inject IGrowingMediumService _growingMediumService
@inject ICatalogService _catalogService

<PageTitle>Medios de Crecimiento</PageTitle>

<h2>Lista de Medios de Crecimiento</h2>
<hr />

<AlertMessage Title="Mensaje de sistema" @ref="@alertCreateMessage">
    <div class="alert alert-success">
        <p>Contenedor creado con éxito</p>
    </div>
</AlertMessage>

<AlertMessage Title="Mensaje de sistema" @ref="@alertUpdateMessage">
    <div class="alert alert-success">
        <p>Contenedor actualizado con éxito</p>
    </div>
</AlertMessage>

<AlertMessage Title="Error de sistema" @ref="@alertErrorMessage">
    <div class="alert alert-danger">
        <p><label>Hubo un error en la aplicación. Informe al administrador</label></p>
    </div>
</AlertMessage>


@if (!createNew)
{
    <div class="container-fluid">
        <div class="row align-items-end">
            <div class="col-2">
                <label>Catálogo:</label>
                <InputSelect id="catalogsList" @bind-Value="@selectedCatalogId" style="width: 100%" class="form-select form-select-sm">
                    <option value="0">Todos</option>
                    @foreach (var catalog in catalogs)
                    {
                        <option value="@catalog.Id">@catalog.Name</option>
                    }
                </InputSelect>
            </div>
            <div class="col-2">
                <label class="form-check-label">Solo Activos</label>
                <input type="checkbox" id="onlyActivesCheck" checked @bind-value="@onlyActives" class="form-check-input" />
            </div>
            <div class="col-2">
                <button class="btn btn-primary" @onclick="GetGrowingMediumsClick">Consultar</button>
            </div>
            <div class="col-2">
                <button class="btn btn-secondary" @onclick="NewGrowingMediumClick">Nuevo</button>
            </div>
            <div class="col-2" />

        </div>
    </div>
}
else
{
    <EditForm EditContext="editContext">
        <DataAnnotationsValidator />
        <div class="container-fluid">
            <div class="row align-items-end">
                <div class="col-2">
                    <label>Catálogo:</label>
                    <InputSelect @bind-Value="@newGrowingMedium.CatalogId" style="width: 100%" class="form-select form-select-sm">
                        <option value="0">Seleccione una opción</option>
                        @foreach (var catalog in catalogs)
                        {
                            <option value="@catalog.Id">@catalog.Name</option>
                        }
                    </InputSelect>
                </div>
                <div class="col-2">
                    <label>Nombre:</label>
                    <InputText @bind-Value="@newGrowingMedium.Name" style="width: 100%" class="form-control form-control-sm" />
                </div>
                <div class="col-2">
                    <label>Porcentaje Capacidad Contenedor:</label>
                    <InputNumber @bind-Value="@newGrowingMedium.ContainerCapacityPercentage" style="width: 100%" class="form-control form-control-sm" />
                </div>
                <div class="col-2">
                    <label>Punto Marchitez Permanente:</label>
                    <InputNumber @bind-Value="@newGrowingMedium.PermanentWiltingPoint" style="width: 100%" class="form-control form-control-sm" />
                </div>
                <div class="col-2">
                    <button class="btn btn-primary" @onclick="AddGrowingMediumClick">Agregar</button>
                    <button class="btn btn-danger" @onclick="CancelAddGrowingMediumClick">Cancelar</button>
                </div>
            </div>
            @if (!valid)
            {
                <div class="row p-3">
                    <div class="alert alert-warning col-8" role="alert">
                        Debe seleccionar o digitar algun valor para los atributos marcados en rojo
                    </div>
                </div>
            }
        </div>
    </EditForm>
}
<hr />

@if (growingMediums == null)
{
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Cargando...</span>
    </div>
}
else
{
    <QuickGrid Items="@growingMediums" Pagination="@pagination">
        <TemplateColumn Title="Id" >
            <label Class="tinyColumn">@context.Id</label>
        </TemplateColumn>
        <TemplateColumn Title="Catalogo" Class="normalColumn">
            @if (context.Id == editableId)
            {
                <InputSelect id="catalogList" @bind-Value="@context.CatalogId" style="width: 100%">

                    @foreach (var catalog in catalogs)
                    {
                        <option value="@catalog.Id">@catalog.Name</option>
                    }
                </InputSelect>
            }
            else
            {
                <label>@context.Catalog</label>
            }
        </TemplateColumn>
        <TemplateColumn Title="Nombre"  Sortable="true">
            @if (context.Id == editableId)
            {
                <input Class="normalColumn" @bind="@context.Name" />
            }
            else
            {
                <label Class="normalColumn">@context.Name</label>
            }
        </TemplateColumn>
        <TemplateColumn Title="Porcentaje Capacidad Contenedor">
            @if (context.Id == editableId)
            {
                <input Class="normalColumn" @bind="@context.ContainerCapacityPercentage" />
            }
            else
            {
                <label Class ="normalColumn">@context.ContainerCapacityPercentage</label>
            }
        </TemplateColumn>
        <TemplateColumn Title="Punto Marchitez Permanente">
            @if (context.Id == editableId)
            {
                <input Class="normalColumn" @bind="@context.PermanentWiltingPoint" />
            }
            else
            {
                <label Class="normalColumn">@context.PermanentWiltingPoint</label>
            }
        </TemplateColumn>        
        <TemplateColumn Title="Activo" Class="normalColumn">
            @if (context.Id == editableId)
            {
                <input type="checkbox" @bind="@context.Active" />
            }
            else
            {
                @if (context.Active)
                {
                    <i class="bi bi-toggle-on" />
                }
                else
                {
                    <i class="bi bi-toggle-off" />
                }
            }
        </TemplateColumn>
        <TemplateColumn Title="Acciones" Class="normalColumn">
            @if (context.Id == editableId)
            {
                <button @onclick="@(() => SaveClick(@context))"><i class="bi bi-floppy-fill"></i></button>
                <button @onclick="@(() => CancelEditClick())"><i class="bi bi-x-circle-fill"></i></button>
            }
            else
            {
                <button @onclick="@(() => EditClick(@context.Id))"><i class="bi bi-pencil-square"></i></button>
            }
        </TemplateColumn>
    </QuickGrid>

    <Paginator State="@pagination" />
}

@code {

    #region Main

    public class GrowingMediumModel
    {
        public int Id { get; set; }
        public int CatalogId { get; set; }
        public string? Catalog { get; set; }
        public string? Name { get; set; }
        public double ContainerCapacityPercentage { get; set; }
        public double PermanentWiltingPoint { get; set; }
        public bool Active { get; set; }
    }

    private AlertMessage? alertErrorMessage { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            editContext = new EditContext(newGrowingMedium);

            var getAllCatalogsResult = await _catalogService.GetAll(new GetAllCatalogsRequest() { IncludeInactives = false });
            catalogs = getAllCatalogsResult.Catalogs.ToList();

            await GetGrowingMediumsClick();
        }
        catch (Exception ex)
        {
        }
    }

    #endregion

    #region Search of GrowingMediums

    private IQueryable<GrowingMediumModel>? growingMediums;
    public int selectedCatalogId = 0;
    public bool onlyActives = true;
    public List<Catalog> catalogs = new List<Catalog>();
    PaginationState pagination = new PaginationState() { ItemsPerPage = 20 };

    public async Task GetGrowingMediumsClick()
    {
        growingMediums = null;
        List<GrowingMediumModel> growingMediumsList = new List<GrowingMediumModel>();
        try
        {

            var getAllGrowingMediumsResult = await _growingMediumService.GetAll(new GetAllGrowingMediumsRequest() { CatalogId = selectedCatalogId, IncludeInactives = !onlyActives });

            if (getAllGrowingMediumsResult.GrowingMediums != null)
            {
                getAllGrowingMediumsResult.GrowingMediums.ToList().ForEach(c => growingMediumsList.Add(new GrowingMediumModel()
                    {
                        Id = c.Id,
                        CatalogId = c.CatalogId,
                        Catalog = catalogs.Where(cat => cat.Id == c.CatalogId).FirstOrDefault().Name,
                        Name = c.Name,
                        ContainerCapacityPercentage = c.ContainerCapacityPercentage,
                        PermanentWiltingPoint = c.PermanentWiltingPoint,
                        Active = c.Active
                    }));

                growingMediums = growingMediumsList.AsQueryable();
            }
        }
        catch (Exception ex)
        {
            alertErrorMessage.Open();
            growingMediums = growingMediumsList.AsQueryable();
        }
    }

    #endregion

    #region New GrowingMedium

    public EditContext? editContext;
    public GrowingMediumModel newGrowingMedium = new GrowingMediumModel();
    public bool createNew = false;
    public int newCatalogId = 0;
    bool valid = true;
    private AlertMessage alertCreateMessage { get; set; }

    public async Task NewGrowingMediumClick()
    {
        createNew = true;
        valid = true;
        ClearNewModel();
    }

    public async Task CancelAddGrowingMediumClick()
    {
        createNew = false;
        valid = true;
    }

    public async Task AddGrowingMediumClick()
    {
        try
        {
            valid = editContext.Validate();
            if (valid)
            {
                var createGrowingMediumResult = await _growingMediumService.Create(new CreateGrowingMediumRequest()
                    {
                        CatalogId = newGrowingMedium.CatalogId,
                        Name = newGrowingMedium.Name,
                        ContainerCapacityPercentage = newGrowingMedium.ContainerCapacityPercentage,
                        PermanentWiltingPoint = newGrowingMedium.PermanentWiltingPoint
                    });
                if (createGrowingMediumResult != null)
                {
                    alertCreateMessage.Open();
                    await GetGrowingMediumsClick();
                }
                else
                {
                    alertErrorMessage.Open();
                }
                CancelAddGrowingMediumClick();
            }
        }
        catch (Exception ex)
        {
        }
    }

    private void ClearNewModel()
    {
        newGrowingMedium.CatalogId = 0;
        newGrowingMedium.Name = string.Empty;
        newGrowingMedium.ContainerCapacityPercentage = 0;
        newGrowingMedium.PermanentWiltingPoint = 0;
    }

    #endregion

    #region Edit GrowingMedium

    public int editableId = 0;
    private AlertMessage alertUpdateMessage { get; set; }

    void EditClick(int id) => editableId = id;

    void CancelEditClick() => editableId = 0;

    private async Task SaveClick(GrowingMediumModel growingMediumToSave)
    {
        try
        {
            growingMediums = null;
            var updateContainerResult = await _growingMediumService.Update(new UpdateGrowingMediumRequest()
                {
                    Id = growingMediumToSave.Id,
                    CatalogId = growingMediumToSave.CatalogId,
                    Name = growingMediumToSave.Name,
                    ContainerCapacityPercentage = growingMediumToSave.ContainerCapacityPercentage,
                    PermanentWiltingPoint = growingMediumToSave.PermanentWiltingPoint,
                    Active = growingMediumToSave.Active
                });
            if (updateContainerResult != null)
            {
                alertUpdateMessage.Open();
                await GetGrowingMediumsClick();
            }
            else
            {
                alertErrorMessage.Open();
            }
            editableId = 0;
        }
        catch (Exception ex)
        {
        }
    }

    #endregion

}